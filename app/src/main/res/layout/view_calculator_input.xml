<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    relative layout , layout ha ra rooyr ham michinad va akhari miad rooye hame -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_tile_background"
        />
    <ImageView
        android:id="@+id/input_element_image"
        android:layout_width="@dimen/sizeIcon"
        android:layout_height="@dimen/sizeIcon"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_trash"
        app:tint="@color/color_image"
        />
<!--    center in parent means center horizontal and vertical -->
<!--    alt+ enter : insert contentDescription for blinds -->

    <TextView
        android:id="@+id/input_element_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/color_text"
        android:textSize="@dimen/textSizeInputElementor"
        android:textStyle="bold"
        android:text="1"
        />

    <View
        android:id="@+id/input_element_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        />

</merge>