<?xml version="1.0" encoding="utf-8"?>
<!--merge means that this layout has no actually parent and its just directly merged
 parentesh mishe oon lineaar layout -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:gravity="center_vertical"
    tools:parentTag="android.widget.LinearLayout">
    <TextView
        android:id="@+id/calculator_input_equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:maxLines="3"
        android:padding="16dp"
        android:textColor="@color/color_text"
        android:textSize="@dimen/textSizeCalculationEqualition"
        android:text="7+7"
        />
    <TextView
        android:id="@+id/calculator_input_outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="@color/color_text_light"
        android:textSize="@dimen/textSizeCalculationOutcome"
        android:text="49"
        />

</merge>